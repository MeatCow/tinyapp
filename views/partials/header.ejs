<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (!username) {%>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
        <input class="form-control mr-sm-2" type="input" name="username" placeholder="Ex. John Smith"
          aria-label="username">
        <button class="btn btn-outline-dark my-2 my-sm-0" aria-label="login button">Login</button>
      </form>
      <%} else {%>
      <div class="form-inline">
        <label class="navbar-item my-2 mr-sm-2" aria-label="name">Logged in As: <%= username %>!</label>
        <form method="POST" action="/logout">
          <button class="btn btn-outline-dark my-2 my-sm-0" aria-label="logout button">Logout</button>
        </form>
      </div>
      <%}%>
    </div>
  </nav>
</header>